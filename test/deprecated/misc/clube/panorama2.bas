1 DIM T(256)
2 R=RND(-TIME)
3 DEF FNR(A, B)=A*RND(1)+B
4 T(0)=FNR(96, 80)
5 T(256)=FNR(96, 80)
6 FOR H=0 TO 7
7 B=2^(7-H)       
8 FOR I=B TO 256 STEP B+B
9 T(I)=(T(I-B)+T(I+B))/2+FNR(2*B, -B)
10 NEXT
11 NEXT
12 SCREEN 2
13 FOR X=0 TO 255
14 LINE(X, T(X))-(X, 191), 12
15 NEXT
16 GOTO 16