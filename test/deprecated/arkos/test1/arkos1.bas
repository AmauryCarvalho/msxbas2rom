FILE "outforahero.akm"
FILE "SoundEffects.akx"

10 CLS
11 PRINT "ARKOS TRACKER 2 PLAYER TEST"
12 PRINT
13 PRINT "Press SPACE to play/mute the song"
14 PRINT "Press ARROWS to play sound effects"
15 PRINT "Press ESC to exit"
16 PRINT 

20 CMD PLYLOAD 0, 1
21 CMD PLYSONG 0
22 M% = 0

30 K% = INKEY : J% = STICK(0) OR STICK(1) : B% = STRIG(0) OR STRIG(1) 
31 IF K% = 27 THEN 60
32 IF J% <> 0 THEN 50
33 IF B% <> 0 THEN 40
34 GOTO 30

40 IF M% = 0 THEN M% = 1 ELSE M% = 0
41 IF M% = 0 THEN PRINT "Muting the song" : CMD PLYMUTE
42 IF M% = 1 THEN PRINT "Playing the song" : CMD PLYPLAY
43 IF STRIG(0) OR STRIG(1) THEN 43
44 GOTO 30

50 PRINT "Playing a sound effect..."
51 IF J% = 1 THEN CMD PLYSOUND 1
52 IF J% = 3 THEN CMD PLYSOUND 2
53 IF J% = 5 THEN CMD PLYSOUND 3
54 IF J% = 7 THEN CMD PLYSOUND 4
55 IF STICK(0) OR STICK(1) GOTO 55
56 GOTO 30

60 PRINT "Muting the song and exiting"
61 CMD PLYMUTE
62 END

