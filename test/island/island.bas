INCLUDE "island.inc"
10 SCREEN 2, 2
20 CMD KEYCLKOFF
30 CMD DISSCR
40 CMD WRTCHR 0
50 CMD WRTCLR 1
60 CMD WRTSCR 2
70 CMD WRTSPRPAT 3
80 CMD ENASCR
90 X% = 60 : Y% = 121 : S% = 0 : M% = 4
100 GOSUB 300
110 PUT SPRITE 0,(X%,Y%),15,S%
120 T% = STRIG(0) OR STRIG(1) : A% = STICK(0) OR STICK(1)
130 IF T% <> 0 THEN GOSUB 300
140 IF A% = 7 THEN X% = X% - 2 : IF X% < 55 THEN X% = 55
150 IF A% = 3 THEN X% = X% + 2 : IF X% > 180 THEN X% = 180
160 FOR T% = 0 TO 300 : NEXT T%
170 IF A% > 0 THEN GOTO 110 ELSE GOTO 120
300 CMD PT3LOAD M%
310 CMD PT3PLAY
320 M% = M% + 1 : IF M% > 6 THEN M% = 4
330 RETURN 
