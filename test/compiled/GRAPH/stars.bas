10 REM estrelas - LIMA. Desenhos basicos para MSX, 1989
20 SCREEN 5
25 LINE(0,0)-(255,191),,B : LINE(2,2)-(127,189),,B : LINE(129,2)-(253,189),,B
30 PI=4*ATN(1)
35 REM NRO DE PONTAS
40 FOR A=0 TO 2*PI STEP 2*PI/12
45 REM TAMANHO
50 FOR B=0 TO 30 STEP 30
60 X=63+(20+B)*SIN(A) : Y = 96+(20+B)*COS(A)
70 IF A=0 THEN GOTO 90
80 LINE(X0,Y0)-(X,Y),15
85 REM PSET(X0,Y0),8 : PSET(X, Y),8
90 X0=X : Y0=Y
100 NEXT B : NEXT A
105 REM 2A ESTRELA
110 FOR A=0 TO 2*PI STEP 2*PI/12
120 X=193+50*SIN(A) : Y = 96+50*COS(A)
130 X1=193+20*SIN(A+PI/12) : Y1 = 96+20*COS(A+PI/12)
140 X2=193+20*SIN(A-PI/12) : Y2 = 96+20*COS(A-PI/12)
150 LINE(X1,Y1)-(X,Y),15 : LINE(X2,Y2)-(X,Y),15
155 REM PSET(X1,Y1),8 : PSET(X, Y),8 : PSET(X2,Y2), 8
160 NEXT A
200 GOTO 200
